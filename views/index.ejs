<% include ./partials/header %>
<div class="ui grid">
	<div class="five wide column">
		<div class="parallaxCoverL">
		</div>
	</div>
	<div class="ui main text container  six wide centered column">
		<h1 class="ui header">Timeline</h1>
		<div class="ui top attached segment">
			<div class="ui divided items">
				<% blogs.forEach(function(blog){ %>
					<div class="item">
							<div class="image">
								<img src="<%= blog.image %>" />
							</div>
							<div class="content">
							<a class="header" href="blogs/<%= blog._id %>"><%= blog.title %></a>
							<div class="meta">
								<span> <%= blog.year %> </span>
							</div>
							<div class="description">
								<p>
									<%- blog.body.substring(0,100) %>...
								</p>
							</div>
							<div class="extra">
								<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
								Read More
								<i class="right chevron icon"></i>
								</a>
							</div>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
	<div class=" five wide column right floated left aligned">
		<div class="parallaxCoverR"></div>
	</div>
</div>





<% include ./partials/footer %>
